    90                                  ; ★★★ 切换到 32 位保护模式 ★★★
    91                                  ; ---------------------------------
    92                                  
    93                                      ; 0. 禁用中断（非常重要！）
    94                                      ;    如果不禁用，硬件中断会导致系统崩溃（因为还没有IDT）
    95 000000B0 FA                          CLI
    96                                  
    97                                      ; 1. 写入启动信息到内存（struct BOOTINFO）
    98 000000B1 C606F00F0A                  MOV BYTE [0x0ff0], CYLS          ; cyls: 柱面数
    99 000000B6 C606F10F00                  MOV BYTE [0x0ff1], 0             ; leds: 键盘LED状态（暂时为0）
   100 000000BB C606F20F13                  MOV BYTE [0x0ff2], 0x13          ; vmode: 显示模式（VGA 0x13）
   101 000000C0 C606F30F00                  MOV BYTE [0x0ff3], 0             ; reserve: 保留
   102 000000C5 C706F40F4001                MOV WORD [0x0ff4], 320           ; scrnx: 屏幕宽度
   103 000000CB C706F60FC800                MOV WORD [0x0ff6], 200           ; scrny: 屏幕高度
   104 000000D1 66C706F80F00000A00          MOV DWORD [0x0ff8], 0x000a0000   ; vram: 显存地址
   105                                  
   106                                      ; 2. 键盘控制器：打开 A20 Gate
   107                                      ;    (允许 CPU 访问 1MB 以上内存)
   108                                  wait_KBC_sendready:
   109 000000DA E464                        IN  AL, 0x64
   110 000000DC 2402                        AND AL, 0x02
   111 000000DE 75FA                        JNE wait_KBC_sendready
   112 000000E0 B0D1                        MOV AL, 0xd1
   113 000000E2 E664                        OUT 0x64, AL
   114                                  wait_KBC_sendready_2:
   115 000000E4 E464                        IN  AL, 0x64
   116 000000E6 2402                        AND AL, 0x02
   117 000000E8 75FA                        JNE wait_KBC_sendready_2
   118 000000EA B0DF                        MOV AL, 0xdf  ; 0xdf = 开启 A20
   119 000000EC E660                        OUT 0x60, AL
   120                                  wait_KBC_sendready_3:
   121 000000EE E464                        IN  AL, 0x64
   122 000000F0 2402                        AND AL, 0x02
   123 000000F2 75FA                        JNE wait_KBC_sendready_3

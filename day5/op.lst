   125                                      ; 3. 加载 GDT (全局描述符表)
   126                                      ;    GDT 告诉 CPU 32位模式下的内存布局
   127 000000F4 0F0116[2C01]                LGDT [GDTR0]
   128                                  
   129                                      ; 4. 拨动开关！设置 CR0 寄存器的 PE 位
   130                                      ;    PE=1 (Protection Enable)
   131 000000F9 0F20C0                      MOV EAX, CR0
   132 000000FC 6625FFFFFF7F                AND EAX, 0x7fffffff ; (书中不用)
   133 00000102 6683C801                    OR  EAX, 0x00000001
   134 00000106 0F22C0                      MOV CR0, EAX
